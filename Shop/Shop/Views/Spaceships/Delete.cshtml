@model Shop.Models.Spaceships.SpaceshipDeleteViewModel

<h1 class="m-0 text-center">Delete</h1>
<br/>

<div>
	<h4>Spaceships</h4>
	<hr />
	<dl class="row">
		<div class="form-group row">
			<label asp-for="Id" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.Id)
		</div>
	</dl>

	<dl class="row">
		<div class="form-group row">
			<label asp-for="Name" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.Name)
		</div>
	</dl>

	<dl class="row">
		<div class="form-group row">
			<label asp-for="Typename" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.Typename)
		</div>
	</dl>

	<dl class="row">
		<div class="form-group row">
			<label asp-for="SpaceshipModel" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.SpaceshipModel)
		</div>
	</dl>

	<dl class="row">
		<div class="form-group row">
			<label asp-for="BuiltDate" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.BuiltDate)
		</div>
	</dl>

	<dl class="row">
		<div class="form-group row">
			<label asp-for="Crew" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.Crew)
		</div>
	</dl>

	<dl class="row">
		<div class="form-group row">
			<label asp-for="EnginePower" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.EnginePower)
		</div>
	</dl>

	<dl class="row">
		<div class="form-group row">
			<label asp-for="CreatedAt" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.CreatedAt)
		</div>
	</dl>

	<dl class="row">
		<div class="form-group row">
			<label asp-for="ModifiedAt" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.ModifiedAt)
		</div>
		
		@foreach (var images in Model.Images)
		{
			<partial name="_Images" model="images" />
		}
	</dl>

	<form asp-action="DeleteConfirmation">
		<input type="hidden" asp-for="Id" />
		<input type="submit" value="Delete" class="btn btn-outline-danger" />
		<a asp-action="Index" asp-controller="spaceships" class="btn btn-outline-dark">Back</a>
	</form>
</div>
