@model Shop.Models.Kindergartens.KindergartenDeleteViewModel

<h1 class="m-0 text-center">Delete</h1>
<br />

<div class="ps-5">
	<h4>Kindergartens</h4>
	<hr />
	<dl class="row">
		<div class="form-group row">
			<label asp-for="Id" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.Id)
		</div>
	</dl>

	<dl class="row">
		<div class="form-group row">
			<label asp-for="GroupName" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.GroupName)
		</div>
	</dl>

	<dl class="row">
		<div class="form-group row">
			<label asp-for="ChildrenCount" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.ChildrenCount)
		</div>
	</dl>

	<dl class="row">
		<div class="form-group row">
			<label asp-for="KindergartenName" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.KindergartenName)
		</div>
	</dl>

	<dl class="row">
		<div class="form-group row">
			<label asp-for="Teacher" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.Teacher)
		</div>
	</dl>

	<dl class="row">
		<div class="form-group row">
			<label asp-for="CreatedAt" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.CreatedAt)
		</div>
	</dl>

	<dl class="row">
		<div class="form-group row">
			<label asp-for="UpdatedAt" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.UpdatedAt)
		</div>

		<div class="form-group row">
			<label class="col-sm-10 col-form-label">Uplaoded pictures</label>
			<div class="col-sm-10">
				<div class="d-flex flex-wrap">
					@foreach (var images in Model.Image)
					{
						<div class="mb-2 me-2">
							<partial name="_Images" model="images" />
						</div>
					}
				</div>
			</div>
		</div>
	</dl>

	<form asp-action="DeleteConfirmation">
		<input type="hidden" asp-for="Id" />
		<input type="submit" value="Delete" class="btn btn-outline-danger" />
		<a asp-action="Index" asp-controller="kindergartens" class="btn btn-outline-dark">Back</a>
	</form>
</div>
