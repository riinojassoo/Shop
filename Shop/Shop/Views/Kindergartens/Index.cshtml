@model IEnumerable<Shop.Models.Kindergartens.KindergartensIndexViewModel>

@{
	int rowNumber = 1;
}

<div class="m-0 text-center h1">
	Kindergartens
</div>
<br/>

<div class="d-flex justify-content-center">
<form method="post">
		<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th scope="col">Nr</th>
				<th scope="col">Group Name</th>
				<th scope="col">Children Count</th>
				<th scope="col">Kindergarten Name</th>
				<th scope="col">Teacher</th>
				<th scope="col"></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var kindergartens in Model)
			{
				<tr>
					<td>@rowNumber</td>
					<td>@kindergartens.GroupName</td>
					<td>@kindergartens.ChildrenCount</td>
					<td>@kindergartens.KindergartenName</td>
					<td>@kindergartens.Teacher</td>
					<td>
						<a asp-action="details" asp-controller="kindergartens" asp-route-id="@kindergartens.Id" class="btn btn-outline-dark">Details</a>
						<a asp-action="update" asp-controller="kindergartens" asp-route-id="@kindergartens.Id" class="btn btn-outline-dark">Update</a>
						<a asp-action="delete" asp-controller="kindergartens" asp-route-id="@kindergartens.Id" class="btn btn-outline-danger">Delete</a>
					</td>
				</tr>

				rowNumber += 1;
			}
		</tbody>
	</table>
</form>
</div>

<div class="m-0 text-center">
	<a asp-action="create" asp-asp-controller="Spaceships" type="submit" class="btn btn-dark">Create</a>
</div>