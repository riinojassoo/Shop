@model Shop.Models.RealEstates.RealEstateDeleteViewModel

<h1 class="m-0 text-center">Delete</h1>
<br />

<div class="ps-5">
	<h4>RealEstates</h4>
	<hr />
	<dl class="row">
		<div class="form-group row">
			<label asp-for="Id" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.Id)
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="Size" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.Size)
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="Location" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.Location)
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="RoomNumber" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.RoomNumber)
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="BuildingType" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.BuildingType)
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="CreatedAt" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.CreatedAt)
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="ModifiedAt" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.ModifiedAt)
		</div>
		@foreach (var images in Model.Image)
		{
			<partial name="_Images" model="images" />
		}
	</dl>

	<form asp-action="DeleteConfirmation">
		<input type="hidden" asp-for="Id" />
		<input type="submit" value="Delete" class="btn btn-outline-danger" />
		<a asp-action="Index" asp-controller="realEstates" class="btn btn-outline-dark">Back</a>
	</form>
</div>