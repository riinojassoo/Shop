@model IEnumerable<Shop.Models.FreeGames.FreeGamesIndexViewModel>

<div class="m-0 text-center h1">
	Free Games
</div>
<br />

<div class="row justify-content-center">
	<div class="col-10 form-text text-center">
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th scope="col">Nr</th>
						<th scope="col">Id</th>
						<th scope="col">Title</th>
						<th scope="col">Genre</th>
						<th scope="col">Platform</th>
						<th scope="col">Short Description</th>
						<th scope="col"></th>
					</tr>
				</thead>
				@if (Model != null && Model.Any())
				{
				<tbody>
					@foreach (var freeGames in Model)
					{
						<tr>
							<td>@freeGames.id</td>
							<td>@freeGames.title</td>
							<td>@freeGames.genre</td>
							<td>@freeGames.platform</td>
							<td>@freeGames.short_description</td>
						</tr>
					}
				</tbody>
				}
			</table>
	</div>
</div>
<form asp-controller="FreeGames" asp-action="GenerateList" method="post">
	<div class="form-group col-md-offset-3 col-md-5">
		<button type="submit" class="btn btn-outline-dark">Generate List</button>
	</div>
</form>