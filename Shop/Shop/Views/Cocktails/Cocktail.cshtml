@* teine
@model IEnumerable<Shop.Models.Cocktails.CocktailsSearchViewModel>

<div class="container">
    <h2>Cocktail Search Results</h2>

    @if (Model != null && Model.Any())
    {
        <div class="cocktail-results">
            @foreach (var cocktail in Model)
            {
                <div class="cocktail-item">
                    <h3>@cocktail.strDrink</h3>

                    @if (!string.IsNullOrEmpty(cocktail.strCategory))
                    {
                        <p><strong>Category:</strong> @cocktail.strCategory</p>
                    }

                    @if (!string.IsNullOrEmpty(cocktail.strGlass))
                    {
                        <p><strong>Glass:</strong> @cocktail.strGlass</p>
                    }

                    @if (!string.IsNullOrEmpty(cocktail.strInstructions))
                    {
                        <p><strong>Instructions:</strong> @cocktail.strInstructions</p>
                    }

                    @if (!string.IsNullOrEmpty(cocktail.strDrinkThumb))
                    {
                        <img src="@cocktail.strDrinkThumb" alt="@cocktail.strDrink" />
                    }

                    @if (cocktail.Ingredients.Any())
                    {
                        <p><strong>Ingredients:</strong></p>
                        <ul>
                            @foreach (var ingredient in cocktail.Ingredients)
                            {
                                <li>@ingredient</li>
                            }
                        </ul>
                    }

                    @if (cocktail.Measures.Any())
                    {
                        <p><strong>Measures:</strong></p>
                        <ul>
                            @foreach (var measure in cocktail.Measures)
                            {
                                <li>@measure</li>
                            }
                        </ul>
                    }
                </div>
            }
        </div>
    }
    else
    {
        <p>No cocktails found that match the search criteria.</p>
    }
</div>
