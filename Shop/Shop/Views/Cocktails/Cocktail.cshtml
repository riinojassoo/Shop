@model List<Shop.Models.Cocktails.CocktailsIndexViewModel>

<div class="container">
    <h2 class="text-center">Search Results</h2>

    @if (!Model.Any())
    {
        <p class="text-center text-danger">No cocktails found. Please try another search.</p>
    }
    else
    {
        foreach (var cocktail in Model)
        {
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="@cocktail.strDrinkThumb" class="img-fluid rounded-start" alt="@cocktail.strDrink" />
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@cocktail.strDrink</h5>
                            <p class="card-text"><strong>Category:</strong> @cocktail.strCategory</p>
                            <p class="card-text"><strong>Alcoholic:</strong> @cocktail.strAlcoholic</p>
                            <p class="card-text"><strong>Glass:</strong> @cocktail.strGlass</p>
                            <p class="card-text"><strong>Instructions:</strong> @cocktail.strInstructions</p>

                            <h6>Ingredients:</h6>
                            <ul>
                                @if (!string.IsNullOrWhiteSpace(cocktail.strIngredient1))
                                {
                                    <li>@cocktail.strIngredient1 - @cocktail.strMeasure1</li>
                                }
                                @if (!string.IsNullOrWhiteSpace(cocktail.strIngredient2))
                                {
                                    <li>@cocktail.strIngredient2 - @cocktail.strMeasure2</li>
                                }
                                @if (!string.IsNullOrWhiteSpace(cocktail.strIngredient3))
                                {
                                    <li>@cocktail.strIngredient3 - @cocktail.strMeasure3</li>
                                }
                                @if (!string.IsNullOrWhiteSpace(cocktail.strIngredient4))
                                {
                                    <li>@cocktail.strIngredient4 - @cocktail.strMeasure4</li>
                                }
                                @if (!string.IsNullOrWhiteSpace(cocktail.strIngredient5))
                                {
                                    <li>@cocktail.strIngredient5 - @cocktail.strMeasure5</li>
                                }
                                @if (!string.IsNullOrWhiteSpace(cocktail.strIngredient6))
                                {
                                    <li>@cocktail.strIngredient6 - @cocktail.strMeasure6</li>
                                }
                                @if (!string.IsNullOrWhiteSpace(cocktail.strIngredient7))
                                {
                                    <li>@cocktail.strIngredient7 - @cocktail.strMeasure7</li>
                                }
                                @if (!string.IsNullOrWhiteSpace(cocktail.strIngredient8))
                                {
                                    <li>@cocktail.strIngredient8 - @cocktail.strMeasure8</li>
                                }
                                @if (!string.IsNullOrWhiteSpace(cocktail.strIngredient9))
                                {
                                    <li>@cocktail.strIngredient9 - @cocktail.strMeasure9</li>
                                }
                                @if (!string.IsNullOrWhiteSpace(cocktail.strIngredient10))
                                {
                                    <li>@cocktail.strIngredient10 - @cocktail.strMeasure10</li>
                                }
                                @if (!string.IsNullOrWhiteSpace(cocktail.strIngredient11))
                                {
                                    <li>@cocktail.strIngredient11 - @cocktail.strMeasure11</li>
                                }
                                @if (!string.IsNullOrWhiteSpace(cocktail.strIngredient12))
                                {
                                    <li>@cocktail.strIngredient12 - @cocktail.strMeasure12</li>
                                }
                                @if (!string.IsNullOrWhiteSpace(cocktail.strIngredient13))
                                {
                                    <li>@cocktail.strIngredient13 - @cocktail.strMeasure13</li>
                                }
                                @if (!string.IsNullOrWhiteSpace(cocktail.strIngredient14))
                                {
                                    <li>@cocktail.strIngredient14 - @cocktail.strMeasure14</li>
                                }
                                @if (!string.IsNullOrWhiteSpace(cocktail.strIngredient15))
                                {
                                    <li>@cocktail.strIngredient15 - @cocktail.strMeasure15</li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        }

        <a asp-action="Index" asp-controller="cocktails" class="btn btn-outline-dark">Back</a>
    }
</div>
