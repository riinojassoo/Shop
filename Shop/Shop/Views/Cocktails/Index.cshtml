@model Shop.Models.Cocktails.CocktailsIndexViewModel


<div class="container">
	<form method="post">
		<div class="container">
			<div class="form-group col-md-offset-3 col-md-5">
				<h2>Search cocktails</h2>
				<input asp-for="strDrink" class="form-control" />
				<span asp-validation-for="strDrink" class="text-danger"></span>
			</div>
		</div>
		<div class="container">
			<div class="form-group col-md-offset-3 col-md-5">
				<button asp-controller="Cocktails" asp-action="searchCocktails" class="btn btn-outline-dark">Search</button>
			</div>
		</div>
	</form>
</div>