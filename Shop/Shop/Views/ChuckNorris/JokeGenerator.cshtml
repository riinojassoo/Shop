@model Shop.Models.ChuckNorris.ChuckNorrisJokeGeneratorViewModel

<div class="container">
	<h2>Chuck Norris Joke:</h2>
	<hr />
	<dl class="row text-dark">
		<div class="form-group row">
			<label asp-for="Id" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.Id)
		</div>

		<div class="form-group row">
			<label asp-for="Url" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.Url)
		</div>

		<div class="form-group row">
			<label asp-for="Value" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.Value)
		</div>
		<div class="container">
			<form asp-controller="ChuckNorris" asp-action="GenerateJoke" method="post">
				<div class="form-group col-md-offset-3 col-md-5">
					<button type="submit" class="btn btn-outline-dark">Generate new joke</button>
				</div>
			</form>
		</div>
	</dl>
</div>
