@model Shop.Models.OpenWeathers.OpenWeathersIndexViewModel

<h1>Search City</h1>

<div class="container">
	<form method="post">
		<div class="container">
			<div class="form-group col-md-offset-3 col-md-5">
				<h2>Search the weather in a city</h2>
				<input asp-for="Name" class="form-control" />
			</div>
		</div>
		<div class="container">
			<div class="form-group col-md-offset-3 col-md-5">
				<button asp-controller="OpenWeathers" asp-action="searchName" class="btn btn-outline-dark">Search</button>
			</div>
		</div>
	</form>
</div>
